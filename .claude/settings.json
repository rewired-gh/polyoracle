{
  "permissions": {
    "allow": [
      "Write",
      "Edit",
      "Bash(git fetch:*)",
      "Bash(ls:*)",
      "Bash(.specify/scripts/bash/create-new-feature.sh:*)",
      "Bash(.specify/scripts/bash/check-prerequisites.sh:*)",
      "Bash(.specify/scripts/bash/setup-plan.sh:*)",
      "WebSearch",
      "WebFetch(domain:core.telegram.org)",
      "WebFetch(domain:docs.polymarket.com)",
      "WebFetch(domain:github.com)",
      "Bash(.specify/scripts/bash/update-agent-context.sh:*)",
      "Bash(go mod init:*)",
      "Bash(go get:*)",
      "Bash(go test:*)",
      "Bash(go mod tidy:*)",
      "Bash(go fmt:*)",
      "Bash(go vet:*)",
      "Bash(make:*)",
      "Bash(curl:*)",
      "Bash(go build:*)",
      "Bash(go run:*)",
      "Bash(golangci-lint run:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/lint-hook.sh"
          }
        ]
      }
    ]
  }
}