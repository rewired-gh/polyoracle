# Poly Oracle Configuration Example
# Copy this file to config.yaml and adjust values as needed

# Polymarket API configuration
polymarket:
  api_base_url: "https://gamma-api.polymarket.com"
  poll_interval: 5m                                  # How often to poll for updates
  categories:                                        # Event categories to monitor
    - politics
    - sports
    - crypto
    - entertainment
  timeout: 30s                                       # API request timeout

# Monitoring behavior configuration
monitor:
  threshold: 0.10        # Minimum change magnitude (0.10 = 10%)
  window: 1h             # Time window for change detection
  top_k: 10              # Number of top events to include in notification
  enabled: true          # Enable/disable monitoring

# Telegram notification configuration
telegram:
  bot_token: "YOUR_BOT_TOKEN_HERE"  # Get from @BotFather on Telegram
  chat_id: "YOUR_CHAT_ID_HERE"      # Get from @userinfobot on Telegram
  enabled: true                     # Enable Telegram notifications

# Storage and persistence configuration
storage:
  max_events: 1000                          # Maximum events to track in memory
  max_snapshots_per_event: 100              # Maximum snapshots per event before rotation
  max_file_size_mb: 100                     # Maximum persistence file size in MB
  persistence_interval: 5m                  # How often to save to disk
  file_path: "./data/poly-oracle.json"      # Path to persistence file
  data_dir: "./data"                        # Directory for data storage

# Logging configuration
logging:
  level: "info"    # Log level: debug, info, warn, error
  format: "json"   # Log format: json, text

# Environment variables can override any value:
# POLY_ORACLE_TELEGRAM_BOT_TOKEN=your_token
# POLY_ORACLE_TELEGRAM_CHAT_ID=your_chat_id
# POLY_ORACLE_MONITOR_THRESHOLD=0.15
